<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.buddysound.ButtonActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainField"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:background="@color/TopColor"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:textSize="32dp"
                android:textColor="@color/mainField"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_weight="4">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_thumb_up_black_48dp"
                android:background="@drawable/like_push"
                android:onClick="onLikeClick"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_thumb_down_black_48dp"
                android:background="@drawable/dislike_push"
                android:onClick="onDislikeClick"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/randomRadio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/random_player"
                    android:textColor="@color/RadioText"
                    android:buttonTint="@color/TopColor"
                    android:layout_marginLeft="18dp"/>

                <RadioButton
                    android:id="@+id/orderRadio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/post_order_player"
                    android:textColor="@color/RadioText"
                    android:buttonTint="@color/TopColor"
                    android:layout_marginLeft="18dp"/>

            </RadioGroup>


        </LinearLayout>

    </LinearLayout>



</FrameLayout>
